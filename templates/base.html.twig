<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="bg-slate-100 h-screen max-h-screen">
  <div class="flex flex-col max-w-[75%] w-9/12 mx-auto max-h-full h-full">
    <nav class="flex justify-between w-full p-4 select-none h-[62px]">
      <div class="flex gap-3">
         {% if app.request.pathInfo == path('app_home') %}
          <a href="{{ path('app_home') }}" class="hover:text-black text-md border-b-2 text-zinc-800 border-zinc-800 flex gap-2 items-center pb-1">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
