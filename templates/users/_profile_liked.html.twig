<turbo-frame id="viewTweet">
  <div class="flex justify-around text-sm border border-b-slate-300">
       <a href="{{path('app_user_following', {'id': id})}}" class="hover:bg-zinc-800 text-zinc-700 hover:text-slate-50 w-1/3 transition text-center p-2">
            following
          </a>
          <a href="{{path('app_user_followers', {'id': id})}}" class="hover:bg-zinc-800 hover:text-slate-50 w-1/3 text-center p-2">
            followers
          </a>
          <a href="{{path('app_user_liked', {'id': id})}}" class="bg-zinc-800 text-slate-50 w-1/3 text-center p-2">
            liked
          </a>
  </div>
  <div> 
    {% for tweet in tweets %}
      <div class="flex gap-2 h-fit w-full p-2 text-start border-b border-slate-300">
            <div class="w-auto max-w-auto min-w-auto flex gap-1">
             <div class="w-[35px] h-[35px]">
            <img src="{{tweet.author.photo ? (tweet.author.photo):('/default.jpg')}}" alt="userPhoto" class="w-full h-full rounded-full" data-userActions-target="photo">
          </div>
            </div>
            <div class="flex flex-col justify-between w-full">
              <div class="flex justify-between items-center">
                <div class="flex gap-1">
                  <a href="{{ path('app_user_show', { "id": tweet.author.id })}}" data-turbo="false" class="text-sm font-semibold border-b-2 border-transparent hover:border-b-2 hover:border-zinc-800">{{tweet.author.username}}</a>
                  <p class="text-sm text-gray-400 font-light">{{tweet.author.email}}</p>
                </div>
                <p class="text-xs text-gray-400 font-light">{{ tweet.createdAt|date("m/d/Y H:i")}}</p>
              </div>
              <div>
                <p class="text-sm font-thin">{{ tweet.description }}</p>
              </div>
            </div>
          </div>
    {% endfor %}
  </div>
</turbo-frame>